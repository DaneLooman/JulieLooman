---
import { MailIcon, LinkedinIcon, PhoneIcon } from 'astro-feather';
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---

<footer>
	<div id='footer-contain'>
		<Image
			src={logo}
			alt='Julie Looman Logo of a light blue J over a dark blue L.'
			class='header-logo'
			height='90'
			width='80'
		/>
		<div id='footer-links'>
			<a href='tel:304-550-6310' aria-label='Call me at 304-376-4544'
				><PhoneIcon size={24} /><span>304-376-4544</span></a
			>
			<a
				href='mailto:Julie@Looman.Dev'
				aria-label='Email me at Julie@Looman.Dev'
				><MailIcon size={24} /> <span>Julie@Looman.dev</span></a
			>

			<a
				href='https://www.linkedin.com/in/julielooman/'
				target='_blank'
				aria-label='Message me on LinkedIn'
				><LinkedinIcon size={24} /><span>Linkedin.com/in/julielooman</span></a
			>
		</div>
		<hr />
		<p>Â© Looman Design & Devlopment</p>
	</div>
</footer>

<style>
	footer {
		box-sizing: border-box;
		width: 100vw;
		width: 100lvw;
		background-color: rgba(242, 249, 248, 1);
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		padding: 48px 0px;
	}
	#footer-contain {
		display: grid;
		grid-template-columns: 1fr 1fr;
		max-width: 1920px;
		width: 100%;
		justify-items: end;
		column-gap: 64px;
		row-gap: 48px;
	}
	#footer-contain > hr {
		height: 1px;
		background-color: rgba(34, 75, 116, 0.6);
		width: 80%;
		grid-column: 1 / span 2;
		margin: 0px;
		border: 0px solid #fff;
		justify-self: center;
	}
	#footer-contain > p {
		font-family: 'Montserrat';
		color: rgba(34, 75, 116, 0.8);
		grid-column: 1 / span 2;
		font-size: 12px;
		font-weight: 100;
		justify-self: center;
		margin: 0;
	}
	#footer-links {
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		height: 100%;
		justify-items: center;
		justify-content: space-between;
		justify-self: start;
	}
	#footer-links > a {
		color: rgba(34, 75, 116, 0.9);
		text-decoration: none;
		display: flex;
		align-items: center;
		font-size: 14px;
		gap: 8px;
		font-weight: 100;
	}
	#footer-links > a > span {
		padding-left: 8px;
		border-left: 2px solid rgba(34, 75, 116, 0.9);
	}
	#footer-links > a:hover {
		color: rgba(34, 75, 116, 1);
	}
	@media only screen and (max-width: 843px) {
		footer {
			padding: 48px 0px 24px 0px;
		}
		#footer-contain {
			grid-template-columns: 1fr;
			align-items: center;
			row-gap: 24px;
		}
		#footer-contain > img,
		#footer-contain > p,
		#footer-contain > hr,
		#footer-links {
			grid-column: 1 / 2;
			justify-self: center;
		}
		#footer-links {
			align-items: center;
		}
		#footer-links > a {
			padding: 8px 0px;
		}
	}
</style>
