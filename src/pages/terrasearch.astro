---
import Layout from '../layouts/Layout.astro';
import top from '../assets/Terra-Hero.webp';
import middle from '../assets/Terra-Card.webp';
import bottom from '../assets/Terra-Web.webp';
import alt from '../assets/Index-Terra.webp';
import topo from '../assets/Terra-topo.webp';
---

<Layout>
	<main>
		<div id='hero'>
			<h1>
				Logo Design,<br />Brand Identity,<br />& Web Design
			</h1>
		</div>
		<div id='text'>
			<div id='text-contain'>
				<h2>A company not afraid to get their hands dirty.</h2>
				<p>
					Terrasearch Geophysical is a specialized geoarchaeology, geophysical,
					and geochemical experience company. Their technical and field work
					elements were important to the development of their logo and brand.
					The brand needed to reflect the history and nature of their work,
					while not feeling prehistoric.
					<br /><br />
					<span class='thin'>Looman Design & Development</span>
				</p>
			</div>
		</div>
		<div id='middle'></div>
		<div id='bottom'></div>
	</main>
</Layout>

<style
	define:vars={{
		top: `url(${top.src})`,
		middle: `url(${middle.src})`,
		bottom: `url(${bottom.src})`,
		alt: `url(${alt.src})`,
		topo: `url(${topo.src})`,
	}}
>
	main {
		box-sizing: border-box;
		display: grid;
		grid-template-columns: 1fr 1fr;
		width: 100%;
		max-width: 1920px;
	}
	#hero {
		box-sizing: border-box;
		grid-column: 1 / span 2;
		background-image: var(--top);
		height: 90vh;
		display: grid;
		align-items: end;
		color: #fff;
		padding: 60px;
		font-size: 60px;
		background-size: cover; /* Resize the background image to cover the entire container */
	}
	#hero > h1 {
		font-size: 60px;
	}
	#text {
		font-family: 'Verdana';
		color: rgba(92, 110, 84, 1);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background-image: var(--topo);
		background-size: cover; /* Resize the background image to cover the entire container */
	}
	#text > * {
		max-width: 400px;
		background-color: rgba(238, 237, 234, 1);
		padding: 24px 48px;
		margin: 0;
	}
	#text-contain > h2 {
		font-weight: 700;
	}
	#text-contain > p {
		font-weight: 400;
		font-size: 18px;
		line-height: 30px;
		letter-spacing: -1.5%;
		padding-bottom: 24px;
	}
	#text-contain > p > .thin {
		padding-top: 16px;
		font-weight: 100;
		color: rgba(92, 110, 84, 1);
	}
	#middle {
		width: 100%;
		height: 90vh;
		background-image: var(--middle);
		height: 90vh;
		background-size: cover; /* Resize the background image to cover the entire container */
	}
	#bottom {
		grid-column: 1 / span 2;
		width: 100%;
		height: 90vh;
		background-image: var(--bottom);
		height: 90vh;
		background-size: cover; /* Resize the background image to cover the entire container */
	}
	@media only screen and (max-width: 843px) {
		main {
			grid-template-columns: 1fr;
		}
		#hero,
		#bottom {
			grid-column: 1 / 2;
			background-position: center; /* Center the image */
		}
		#hero {
			padding: 8px;
			background-image: var(--alt);
			background-position: center; /* Center the image */
		}
		#hero > h1 {
			font-size: 40px;
			stroke-width: 2px;
			-webkit-text-stroke-width: 2px;
			-webkit-text-stroke-color: rgba(92, 110, 84, 1);
		}
		#text {
			padding: 24px;
		}
		#text > #text-contain {
			padding: 8px 24px;
		}
	}
</style>
